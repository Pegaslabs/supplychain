{{#each shipments}}
<hr>
<div class="same-shipment ">
  <div>&nbsp;
    <div class="left">
      <div class="btn-group">
        <a href="#" class="btn btn-default dropdown-toggle">
          {{$dateFormat this.transactions.[0].shipment_date}}
        </a>
      </div>
      <span class="location">{{this.transactions.[0].from_location_name}} to {{this.transactions.[0].to_location_name}}</span>
    </div>
    <div class="right">
      <strong>{{this.transaction_count}}</strong> transactions | total value <strong>{{$currency this.total_value}}</strong>
    </div>
  </div>

  <table class="table table-striped table-hover hide">
    <thead>
      <tr>
        <th>Item</th>
        <th>Expiration</th>
        <th>Lot Num</th>
        <th>Quantity</th>
        <th>Unit Price</th>
        <th>Total Value</th>
      </tr>
    </thead>
    <tbody>
      {{#each this.transactions}}
        <tr>
          <td>{{this.item_name}} -- <small>{{this.item_category_name}}</small></td>
          <td>{{$expiration this.item_lot_expiration}}</td>
          <td>{{this.item_lot_num}}</td>
          <td>{{this.qty}}</td>
          <td>{{$currency this.item_lot_unit_price}}</td>
          <td>{{$currency this.total_value}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>

</div>
{{/each}}
